// Example using Jenkins credentials for security

pipeline {
    agent any

    environment {
        DEVLOGS_URL = credentials('devlogs-opensearch-url')
    }

    options {
        devlogs(url: '${DEVLOGS_URL}')
    }

    stages {
        stage('Build and Test') {
            steps {
                sh 'npm install'
                sh 'npm test'
            }
        }
    }
}
